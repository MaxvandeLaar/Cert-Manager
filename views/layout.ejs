<!DOCTYPE html>
<html>
<head>
    <title><%= i18n('title') %></title>
    <% include partials/head.ejs %>
</head>
<body>
    <div class="grid-container full">
        <div class="grid-y grid-frame">
            <div class="cell small-12">
                <div class="grid-x cell-block-y">
                    <div class="cell medium-2 sidebar-container">
                            <div class="title-container">
                                <h3 class="text-center title"><a href="/"><%= i18n('title') %></a></h3>
                            </div>
                            <ul class="vertical menu">
                                <% plugins.forEach(plugin => { %>
                                <li <%= path === plugin.path?'active=true':''%>><a href="<%= plugin.path %>"><%= plugin.title %></a></li>
                                <% }); %>
                            </ul>
                    </div>
                    <div class="cell medium-10">
                        <div class="grid-y">
                            <div class="cell small-1 navigation-container">
                                <%- navigation %>
                            </div>
                            <div class="cell small-11 content-container">
                                <%- body %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

